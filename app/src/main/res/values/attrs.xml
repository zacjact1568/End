<resources>

    <declare-styleable name="CircleColorView">
        <attr name="fillColor" format="color"/>
        <attr name="edgeWidth" format="dimension"/>
        <attr name="edgeColor" format="color"/>
        <attr name="innerText" format="string"/>
        <attr name="innerTextColor" format="color"/>
        <attr name="innerIcon" format="reference"/>
        <attr name="innerIconTintColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CheckView">
        <attr name="checkedColor" format="color"/>
        <attr name="uncheckedColor" format="color"/>
        <attr name="checked" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ItemView">
        <attr name="iconImageSrc" format="reference"/>
        <attr name="titleText" format="string"/>
        <attr name="descriptionText" format="string"/>
        <attr name="descriptionTextActive" format="boolean"/>
    </declare-styleable>

</resources>
