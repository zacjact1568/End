        <attr name="fill_color" format="color"/>
        <attr name="edge_width" format="dimension"/>
        <attr name="edge_color" format="color"/>
        <attr name="inner_text" format="string"/>
        <attr name="inner_text_color" format="color"/>
        <attr name="inner_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CheckView">
        <attr name="check_icon" format="reference"/>
