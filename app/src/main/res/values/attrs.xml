<resources>

    <declare-styleable name="CheckView">
        <attr name="checkedColor" format="color"/>
        <attr name="uncheckedColor" format="color"/>
        <attr name="checked" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ItemView">
        <attr name="iconImageSrc" format="reference"/>
        <attr name="titleText" format="string"/>
        <attr name="descriptionText" format="string"/>
    </declare-styleable>

    <declare-styleable name="ColorPicker">
        <attr name="defaultColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="EnhancedNumberPicker">
        <attr name="dividerColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ImageTextView">
        <attr name="image" format="reference"/>
        <attr name="text" format="string"/>
        <attr name="size" format="dimension"/>
        <attr name="color" format="color"/>
    </declare-styleable>

</resources>
