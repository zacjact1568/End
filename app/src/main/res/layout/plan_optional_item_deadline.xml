<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view_deadline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:padding="@dimen/plan_optional_item_inner_margin">

    <ImageView
        android:id="@+id/ic_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_schedule_grey600_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/text_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_deadline"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/ic_deadline"
        android:layout_marginStart="@dimen/image_text_spacing"/>

    <TextView
        android:id="@+id/text_deadline_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unsettled"
        android:textSize="12sp"
        android:layout_below="@id/text_deadline"
        android:layout_alignStart="@id/text_deadline"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_right_grey600_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
