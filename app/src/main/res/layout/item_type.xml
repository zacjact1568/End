<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_view_outer_margin_half"
        android:layout_marginBottom="@dimen/card_view_outer_margin_half"
        android:layout_marginStart="@dimen/card_view_outer_margin"
        android:layout_marginEnd="@dimen/card_view_outer_margin"
        app:cardCornerRadius="@dimen/card_view_corner_radius">

        <RelativeLayout
            android:id="@+id/card_view_inner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/indigo">

            <TextView
                android:id="@+id/text_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is type name"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/card_view_inner_margin"
                android:layout_marginStart="@dimen/card_view_inner_margin"/>

            <TextView
                android:id="@+id/text_plan_count_of_each_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Plans"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="12sp"
                android:layout_below="@id/text_type_name"
                android:layout_alignStart="@id/text_type_name"
                android:layout_marginBottom="@dimen/card_view_inner_margin"/>

            <ImageView
                android:id="@+id/ic_edit_type"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_edit_white_24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="@dimen/card_view_inner_margin"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
