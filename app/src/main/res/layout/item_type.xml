<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_view_outer_margin_half"
        android:layout_marginBottom="@dimen/card_view_outer_margin_half"
        android:layout_marginStart="@dimen/card_view_outer_margin"
        android:layout_marginEnd="@dimen/card_view_outer_margin"
        app:cardCornerRadius="@dimen/card_view_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">

            <FrameLayout
                android:id="@+id/layout_type_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ic_type_mark"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@color/indigo"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/text_first_char"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="å·¥"
                    android:textSize="28sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <TextView
                android:id="@+id/text_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is type name"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/layout_type_mark"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/text_plan_count_of_each_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Plans"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
