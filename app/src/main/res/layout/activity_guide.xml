<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.activity.GuideActivity">

    <me.imzack.app.end.view.widget.EnhancedViewPager
        android:id="@+id/pager_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <me.imzack.app.end.view.widget.CircleColorView
        android:id="@+id/btn_start"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:fillColor="@color/colorPrimaryDark"
        app:innerIcon="@drawable/ic_arrow_back_black_24dp"/>

    <me.imzack.app.end.view.widget.CircleColorView
        android:id="@+id/btn_end"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:fillColor="@color/colorPrimaryDark"/>

</FrameLayout>