<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".domain.fragment.PlanOptionalItemsFragment">

    <RelativeLayout
        android:id="@+id/item_view_priority_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/plan_optional_item_inner_margin">

        <ImageView
            android:id="@+id/ic_priority_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_half_grey600_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/text_priority_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority Level"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/ic_priority_level"
            android:layout_marginStart="@dimen/image_text_spacing"/>

        <TextView
            android:id="@+id/text_priority_level_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dscpt_unsettled"
            android:textSize="12sp"
            android:layout_below="@id/text_priority_level"
            android:layout_alignStart="@id/text_priority_level"/>

        <!--<RatingBar-->
            <!--android:id="@+id/rating_bar"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:numStars="3"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--style="?android:attr/ratingBarStyleSmall"/>-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_grey600_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <include layout="@layout/divider"/>

    <RelativeLayout
        android:id="@+id/item_view_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/plan_optional_item_inner_margin">

        <ImageView
            android:id="@+id/ic_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_schedule_grey600_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/text_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_deadline"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/ic_deadline"
            android:layout_marginStart="@dimen/image_text_spacing"/>

        <TextView
            android:id="@+id/text_deadline_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dscpt_unsettled"
            android:textSize="12sp"
            android:layout_below="@id/text_deadline"
            android:layout_alignStart="@id/text_deadline"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_grey600_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <include layout="@layout/divider"/>

    <RelativeLayout
        android:id="@+id/item_view_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/plan_optional_item_inner_margin">

        <ImageView
            android:id="@+id/ic_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications_grey600_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/text_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_reminder"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/ic_reminder"
            android:layout_marginStart="@dimen/image_text_spacing"/>

        <TextView
            android:id="@+id/text_reminder_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dscpt_unsettled"
            android:textSize="12sp"
            android:layout_below="@id/text_reminder"
            android:layout_alignStart="@id/text_reminder"/>

        <!--<Switch-->
            <!--android:id="@+id/switch_reminder"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentEnd="true"/>-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_grey600_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>