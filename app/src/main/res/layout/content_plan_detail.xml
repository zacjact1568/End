<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.activity.PlanDetailActivity"
    tools:showIn="@layout/activity_plan_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <me.imzack.app.ender.view.widget.ItemView
            android:id="@+id/item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:iconImageSrc="@drawable/ic_folder_open_black_24dp"
            app:titleText="@string/title_type"/>

        <include layout="@layout/divider"/>

        <me.imzack.app.ender.view.widget.ItemView
            android:id="@+id/item_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:iconImageSrc="@drawable/ic_schedule_black_24dp"
            app:titleText="@string/title_deadline"/>

        <include layout="@layout/divider"/>

        <me.imzack.app.ender.view.widget.ItemView
            android:id="@+id/item_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:iconImageSrc="@drawable/ic_notifications_none_black_24dp"
            app:titleText="@string/title_reminder"/>

        <include layout="@layout/divider"/>

        <TextView
            android:id="@+id/btn_switch_plan_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorAccent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:padding="12dp"
            tools:text="Complete"/>

        <include layout="@layout/divider"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
