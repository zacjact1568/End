<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".domain.activity.CreateTypeActivity"
    tools:showIn="@layout/activity_create_type">

    <com.zack.enderplan.widget.CircleColorView
        android:id="@+id/ic_type_mark"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:edge_width="1dp"/>

    <TextView
        android:id="@+id/text_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="@string/text_new_type_name"/>

    <EditText
        android:id="@+id/editor_type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:hint="@string/hint_editor_type_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:background="@drawable/bg_rounded_rectangle"
        android:paddingStart="8dp"
        android:paddingEnd="28dp"
        android:elevation="4dp"
        tools:text="@string/text_new_type_name"/>

    <RelativeLayout
        android:id="@+id/layout_type_mark_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_ripple_rounded_rectangle"
        android:padding="8dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/text_tmc_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_color"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/text_type_mark_color_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_tmc_item"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            tools:text="Indigo"/>

        <com.zack.enderplan.widget.CircleColorView
            android:id="@+id/ic_type_mark_color"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_type_mark_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_ripple_rounded_rectangle"
        android:padding="8dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/text_tmp_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_pattern"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/text_type_mark_pattern_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_tmp_item"
            android:layout_marginTop="4dp"
            android:text="@string/dscpt_unsettled"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/ic_type_mark_pattern"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close_grey600_24dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"
            android:text="@string/button_cancel"
            style="@style/FloatButtonStyle"/>

        <TextView
            android:id="@+id/btn_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/button_create"
            style="@style/FloatButtonStyle"/>

    </LinearLayout>

</LinearLayout>