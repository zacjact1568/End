<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingStart="18dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants">

    <com.zack.enderplan.view.widget.CircleColorView
        android:id="@+id/ic_type_mark"
        android:layout_width="@dimen/circle_color_view_size"
        android:layout_height="@dimen/circle_color_view_size"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/plan_item_text_size"
        android:maxLines="1"
        android:maxWidth="250dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ic_type_mark"
        android:layout_marginStart="@dimen/image_text_spacing"
        tools:text="Buy Joanne on iTunes"/>

    <ImageView
        android:id="@+id/ic_reminder"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_notifications_black_24dp"
        android:tint="@color/grey_600"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/text_content"
        android:layout_marginStart="4dp"/>

    <ImageView
        android:id="@+id/btn_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        tools:src="@drawable/ic_star_border_black_24dp"
        tools:tint="@color/grey_600"/>

</RelativeLayout>