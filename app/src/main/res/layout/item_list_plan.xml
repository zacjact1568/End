<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ripple"
    android:paddingBottom="10dp"
    android:paddingStart="18dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:descendantFocusability="blocksDescendants">

    <com.zack.enderplan.view.widget.CircleColorView
        android:id="@+id/ic_type_mark"
        android:layout_width="@dimen/circle_color_view_size"
        android:layout_height="@dimen/circle_color_view_size"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ic_type_mark"
        android:layout_toStartOf="@+id/ic_reminder"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:lines="1"
        android:ellipsize="end"
        tools:text="Buy Joanne on iTunes"/>

    <com.zack.enderplan.view.widget.ImageTextView
        android:id="@+id/layout_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_content"
        android:layout_alignStart="@id/text_content"
        app:image="@drawable/ic_schedule_black_24dp"
        app:size="12dp"
        app:color="@color/grey_600"/>

    <ImageView
        android:id="@+id/ic_reminder"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_star"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_notifications_black_24dp"
        android:tint="@color/grey_600"/>

    <ImageView
        android:id="@+id/btn_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        tools:src="@drawable/ic_star_border_black_24dp"
        tools:tint="@color/grey_600"/>

</RelativeLayout>